<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - منصتك</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;700;800&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet">

    <!-- Map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">

    <!-- الموقع -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            margin: 0;
            font-family: "Cairo", sans-serif;
            background: #F5F5F5;
            color: #1f2937;
        }
    </style>
  
</head>

<body dir="ltr">
    <header>
        <div class="container nav">

            <div class="brand" style="display:flex;align-items:center;gap:10px;">
                <img src="logo.png" style="width: 40px; height: 40px; border-radius: 10px; border: 1px solid var(--border); background: white; display: none;" onerror="this.style.display='none'">
                <strong style="font-size:18px">منصتك</strong>
            </div>

            <nav class="menu">
                <a class="navlink active" data-target="home">الرئيسية</a>
                <a class="navlink" data-target="booking">الحجز</a>
                @Html.ActionLink("MAP", "Index", "Home")
                <a class="navlink" data-target="my">حجوزاتي</a>
                <a class="navlink" data-target="support">الدعم</a>

                <button class="lang" id="langBtn">English</button>
                <button class="mode" id="modeBtn">🌙</button>
            </nav>

        </div>
    </header>
    @RenderBody()

    <!-- ================= Scripts ================= -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Leaflet -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <!-- QR -->
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>